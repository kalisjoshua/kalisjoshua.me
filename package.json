{
  "author": {
    "email": "kalisjoshua@gmail.com",
    "name": "Joshua T Kalis",
    "twitter": "kalisjoshua",
    "url": "https://kalisjoshua.me"
  },
  "name": "kalisjoshua.me",
  "description": "Personal website and resume for Joshua Kalis.",
  "version": "10.6.0",
  "homepage": "https://kalisjoshua.me",
  "repository": {
    "type": "git",
    "url": "git@github.com:kalisjoshua/kalisjoshua.me.git"
  },
  "engines": {
    "node": ">=14.3.x"
  },
  "config": {
    "output_dir": "docs"
  },
  "devDependencies": {
    "handlebars": "^4.7.7",
    "http-server": "^14.1.1",
    "marked": "^4.1.1",
    "minify": "^9.1.0",
    "npm-watch": "^0.7.0"
  },
  "scripts": {
    "build": "npm run pages && npm run public && npm run cname",
    "postbuild": "npm run minify",
    "clean": "rm -rf $npm_package_config_output_dir && mkdir $npm_package_config_output_dir",
    "cname": "echo kalisjoshua.me > ./$npm_package_config_output_dir/CNAME",
    "minify": "node ./sanguine/minifier.js $npm_package_config_output_dir",
    "pages": "node ./sanguine/index.js $npm_package_config_output_dir",
    "prepages": "npm run clean",
    "public": "cp -r ./public/* ./$npm_package_config_output_dir",
    "start": "http-server ./$npm_package_config_output_dir/",
    "tag": "git tag v$npm_package_version && git push --tags",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "extensions": "css,html,js,md",
      "patterns": [
        "content",
        "public",
        "sanguine"
      ]
    }
  }
}
